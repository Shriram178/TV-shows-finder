<UserControl x:Class="TVshows.UserContols.ShowDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TVshows.UserContols"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <StackPanel HorizontalAlignment="Center">
        <Image Name="ShowImage"
               Width="100"
               Height="150"
               Margin="5"
               HorizontalAlignment="Center" />
        <TextBlock Name="ShowName"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="5"
                   HorizontalAlignment="Center" />
        <TextBlock Name="ShowDescription"
                   TextWrapping="Wrap"
                   Width="300"
                   Margin="5"
                   HorizontalAlignment="Center" />
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0"
                  HorizontalAlignment="Center"
                  Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Image Source="../Images/star.png"
                       Width="60"
                       Height="30"
                       Grid.Row="0" />
                <TextBlock Name="ShowRating"
                           Grid.Row="1"
                           FontSize="13"
                           Margin="5"
                           HorizontalAlignment="Center" />
            </Grid>
            <Grid Grid.Column="1"
                  HorizontalAlignment="Center"
                  Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Image Source="../Images/status.png"
                       Height="30"
                       Width="60"
                       Grid.Row="0" />
                <TextBlock Name="ShowStatus"
                           Margin="5"
                           Grid.Row="1"
                           FontSize="13"
                           HorizontalAlignment="Center" />
            </Grid>
            <Grid Grid.Column="2"
                  HorizontalAlignment="Center"
                  Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Image Source="../Images/television.png"
                       Height="30"
                       Width="60"
                       Grid.Row="0" />
                <TextBlock Name="ShowType"
                           Margin="5"
                           Grid.Row="1"
                           FontSize="13"
                           HorizontalAlignment="Center" />
            </Grid>
        </Grid>
    </StackPanel>
</UserControl>
